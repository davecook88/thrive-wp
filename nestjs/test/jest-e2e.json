{
  "preset": "ts-jest/presets/default-esm",
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testMatch": [
    "**/test/**/*.e2e.spec.ts"
  ],
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "useESM": true,
        "tsconfig": {
          "module": "ESNext",
          "target": "ES2020"
        }
      }
    ]
  },
  "extensionsToTreatAsEsm": [
    ".ts"
  ],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1",
    "^@/(.*)\\.js$": "<rootDir>/src/$1",
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(bcryptjs|jsonwebtoken|passport|passport-jwt|passport-google-oauth20|passport-local|@nestjs|@jest/globals)/)"
  ],
  "setupFiles": [
    "<rootDir>/env.setup.ts"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/setup.ts"
  ],
  "testTimeout": 30000,
  "testEnvironmentOptions": {
    "NODE_ENV": "test"
  },
  "maxWorkers": 1
}