{
    "name": "@thrive/shared",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./types/*": {
            "types": "./dist/types/*.d.ts",
            "import": "./dist/types/*.js"
        },
        "./clients/*": {
            "types": "./dist/clients/*.d.ts",
            "import": "./dist/clients/*.js"
        }
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "clean": "rm -rf dist",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "rrule": "^2.8.1",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "typescript": "^5.5.4"
    }
}