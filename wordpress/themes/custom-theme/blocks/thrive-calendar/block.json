{
    "apiVersion": 3,
    "name": "custom-theme/thrive-calendar",
    "title": "Thrive Calendar",
    "category": "widgets",
    "icon": "calendar",
    "description": "Teacher availability and bookings calendar.",
    "attributes": {
        "view": {
            "type": "string",
            "default": "week"
        },
        "mode": {
            "type": "string",
            "default": "auto"
        },
        "slotDuration": {
            "type": "number",
            "default": 30
        },
        "snapTo": {
            "type": "number",
            "default": 15
        },
        "showClasses": {
            "type": "boolean",
            "default": true
        },
        "showAvailability": {
            "type": "boolean",
            "default": true
        },
        "showBookings": {
            "type": "boolean",
            "default": true
        },
        "viewHeight": {
            "type": "number",
            "default": 600
        }
    },
    "usesContext": [
        "custom-theme/selectedTeacherId",
        "custom-theme/calendarContextId"
    ],
    "supports": {
        "anchor": true
    },
    "editorScript": "custom-theme-blocks",
    "render": "file:./render.php"
}