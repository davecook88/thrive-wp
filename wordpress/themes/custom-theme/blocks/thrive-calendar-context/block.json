{
    "apiVersion": 3,
    "name": "custom-theme/thrive-calendar-context",
    "title": "Thrive Calendar Context",
    "category": "widgets",
    "icon": "universal-access-alt",
    "description": "Provides a shared calendar context (settings, events, selection) for nested blocks like calendar and modals.",
    "attributes": {
        "contextId": {
            "type": "string"
        },
        "selectedTeacherId": {
            "type": "string"
        },
        "source": {
            "type": "string",
            "default": "teacher-availability"
        },
        "apiEndpoint": {
            "type": "string",
            "default": "/api/calendar/events"
        }
    },
    "providesContext": {
        "custom-theme/calendarContextId": "attributes.contextId",
        "custom-theme/selectedTeacherId": "attributes.selectedTeacherId"
    },
    "supports": {
        "anchor": true
    },
    "editorScript": "custom-theme-blocks",
    "viewScript": "custom-theme-blocks-view",
    "render": "file:./render.php"
}