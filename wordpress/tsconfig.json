{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "moduleResolution": "node16",
    "lib": ["ES2020", "DOM"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@wordpress/*": ["node_modules/@wordpress/*"],
      "../types/*": ["types/*"]
    }
  },
  "include": ["shared/**/*.ts", "types/**/*.ts", "plugins/**/*.ts", "**/*.ts"],
  "exclude": ["node_modules", "vendor"]
}
